<Window x:Class="Task2.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2"
        mc:Ignorable="d"
        Title="About" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Простой текстовый редактор" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontStyle="Italic" FontSize="16"/>
        <Image Source="/img/winona.jpg" Grid.Row="1" Margin="15"/>
        <StackPanel Orientation="Vertical" Grid.Row="2" HorizontalAlignment="Center">
            <TextBlock Text="Автор: Вайнона Райдер"/>
            <TextBlock Text="Версия: 0.0.1"/>
            <TextBlock Text="Дата создания: 07.12.2025"/>
        </StackPanel>
        <Button Content="Закрыть" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="30" Margin="10" Click="Button_Click"/>

    </Grid>
</Window>
