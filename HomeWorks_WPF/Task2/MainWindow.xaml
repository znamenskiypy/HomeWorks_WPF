<Window x:Class="Task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2"
        mc:Ignorable="d"
        Title="Текстовый редактор" Height="450" Width="800">
    <Grid ShowGridLines ="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Content="Открыть" Margin= "5" Padding ="5" FontSize="16" Click="Open_Click"/>
            <Button Content="Сохранить как" Margin= "5" Padding ="5" FontSize="16" Click="Save_Click"/>
            <Button Content="О программе" Margin= "5" Padding ="5" FontSize="16" Click="About_Click"/>
        </StackPanel>
        <TextBox x:Name ="TextBox"
                 Grid.Row="1" 
                 Margin="5"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 BorderThickness="3"/>
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText"
                           Text="Готов"/>
            </StatusBarItem>
        </StatusBar>

    </Grid>
</Window>
